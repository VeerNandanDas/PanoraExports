# ===========================================
# SUPABASE CONFIGURATION (MVP)
# ===========================================

# Supabase Database (PostgreSQL)
# Get this from: https://supabase.com/dashboard → Settings → Database
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Project Details
# Get from: https://supabase.com/dashboard → Settings → API
SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# Storage Bucket (for file uploads)
SUPABASE_STORAGE_BUCKET="panora-documents"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ===========================================
# GST API (OPTIONAL FOR MVP)
# ===========================================
# For demo: Use mock data or manual verification
# For production: Sign up at https://cleartax.in/api or https://vayanadata.com
GST_API_URL="https://api.example.com/gst"
GST_API_KEY="your-gst-api-key"
GST_API_ENABLED="false"  # Set to true when you have API key

# ===========================================
# EMAIL (OPTIONAL FOR MVP)
# ===========================================
# For MVP: Console logging
# For production: Use Resend (free tier: 100 emails/day)
EMAIL_ENABLED="false"
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="noreply@panoraexports.com"

# ===========================================
# APPLICATION SETTINGS
# ===========================================
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# File Upload Limits
MAX_FILE_SIZE="5242880"  # 5MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_TTL="60"     # seconds
RATE_LIMIT_MAX="100"     # requests per TTL

# ===========================================
# DEFAULT ADMIN (FOR SEEDING)
# ===========================================
ADMIN_EMAIL="admin@panoraexports.com"
ADMIN_PASSWORD="Admin@123456"
ADMIN_NAME="Admin User"
